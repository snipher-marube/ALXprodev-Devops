#!/bin/bash

jq -r '
  .name + " " + (.height/10|tostring) + " " + (.weight/10|tostring) + " " + .types[0].type.name
' data.json | 
awk '{
  # Capitalize first letter of type
  first_char = substr($4,1,1)
  rest_chars = substr($4,2)
  type = toupper(first_char) rest_chars
  
  # Format output without using the forbidden pattern
  print $1 " is of type " type ", weighs " $3 "kg, and is " $2 "m tall."
}'